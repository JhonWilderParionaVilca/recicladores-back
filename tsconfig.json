{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "typeRoots": ["./@types", "node_modules/@types"],
    "types": ["node", "jest"],
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spect.ts"]
}
